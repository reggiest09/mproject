.row.pager
  .col-md-4.col-md-offset-4
    = render "shared/logo"

    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
      - add_error(resource.errors.full_messages.to_sentence, 'alert') if resource.errors.present?

      .form-group.input-group.input-group-lg
        %span.input-group-addon
          %i.fa.fa-envelope
        = f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "#{t ".email"}", class: "form-control"

      = f.submit (t ".button_resend_confirmation"), class: "btn btn-success"
    = render "devise/shared/links"
