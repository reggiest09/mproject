<div class="row pager">
  <div class="col-md-4 col-md-offset-4">
    <%= render "shared/logo" %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <% add_error(resource.errors.full_messages.to_sentence, 'alert') if resource.errors.present? %>
      <div class="form-group input-group input-group-lg">
        <span class="input-group-addon">
          <i class="fa fa-envelope"></i>
        </span>
        <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "#{t ".email"}", class: "form-control" %>
      </div>
      <%= f.submit (t ".password_reset_instr"), class: "btn btn-success" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
